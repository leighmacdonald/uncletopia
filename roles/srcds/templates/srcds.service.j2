[Unit]
Description=srcds-{{ item.server_name_short }}
PartOf=srcds-master.service
After=network.target

[Service]
Type=forking
User={{ srcds_user }}
Group=tf2

{% if enable_threads|default(false) %}
CPUAffinity={{ loop0 * 2 }},{{ (loop0 * 2 ) + 1 }}
{% else %}
CPUAffinity={{ loop0 }}
{% endif %}

WorkingDirectory=/home/{{ srcds_user }}/srcds-{{ item.server_name_short }}
Environment=

RemainAfterExit=yes
User={{ srcds_user }}
ExecStart=/usr/bin/tmux -S ./tmux.sock new-session -s {{ item.server_name_short }} -d ./entry.sh
ExecStop=/usr/bin/bash ./stop.sh

KillSignal=SIGCONT

TimeoutStartSec=0

# Use larger timeouts since we have a restart script that notifies
# users and winds the game down in a couple mins.
TimeoutStopSec=300
TimeoutSec=300

Restart=on-failure
RestartSec=10

[Install]
WantedBy=multi-user.target
