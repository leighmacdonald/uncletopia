exclude_paths:
  - .github/
  - host_vars/*
  - group_vars/*
  - hosts.yml
  - .ansible-lint
  - sm_plugins/*
  - playbooks/roles/githubixx.ansible_role_wireguard/*

skip_list:
  - schema
  - internal-error
  - unnamed-task
  - package-latest
  - no-changed-when
  - command-instead-of-shell
  - risky-file-permissions
  - risky-shell-pipe
  - name[casing]
  - name[play]
  - ignore-errors

kinds:
  - tasks: "*/tasks/*.yml"
